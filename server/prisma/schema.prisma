datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
}

model Content {
  id          Int      @id @default(autoincrement())
  page        String
  section     String
  title       String?
  description String?
  imageUrl    String?
  order       Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
} 